<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
        <property name="hibernate.connection.username">valentina</property>
        <property name="hibernate.connection.password">valentina</property>
        <property name="hibernate.default_schema">VALENTINA</property>
        <property name="show_sql">true</property>
        <mapping class="business_layer.entity.Book"></mapping>
        <mapping class="business_layer.entity.Author"></mapping>
    </session-factory>
</hibernate-configuration>
